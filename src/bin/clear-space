#!/bin/bash

# source utils
cd "$(dirname "$0")" \
    && . "../init/helpers.sh"

clear_space() {
    print_header "â™»  Attempting to free some space..."
    # cleanup sys logs and tmp files
    sudo periodic daily weekly monthly
    print_success "cleaned up sys logs and temp files"
    brew cleanup -n
    brew cleanup
    brew cask cleanup
    brew prune
    print_success "cleaned up homebrew"
    cask cleanup
    ~/Library/Caches/Google/Chrome/Default
    print_success "clean app caches"
    rm -rf ~/Library/Caches/com.apple.dt.Xcode
    ~/Library/Developer/Shared/Documentation/DocSets
    /Applications/Xcode.app/Contents/Developer/Documentation/DocSets
    print_success "clean xcode caches"
    emptytrash
}

clear_space
